@model BusinessObject.Artworks

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Artworks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artwork_Id" />
            <div class="form-group">
                <label asp-for="NameAtWork" class="control-label"></label>
                <input asp-for="NameAtWork" class="form-control" />
                <span asp-validation-for="NameAtWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Museum_Id" class="control-label"></label>
                <select asp-for="Museum_Id" class="form-control" asp-items="ViewBag.Museum_Id"></select>
                <span asp-validation-for="Museum_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
